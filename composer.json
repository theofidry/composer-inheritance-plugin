{
    "name": "theofidry/composer-inheritance-plugin",
    "description": "Composer plugin to merge multiple sub composer.json files",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Th√©o FIDRY",
            "email": "theo.fidry@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Fidry\\Composer\\InheritancePlugin\\": "src"
        }
    },
    "require": {
        "php": "^7.2 || ^8.0",
        "composer-plugin-api": "^1.0 || ^2.0",
        "wikimedia/composer-merge-plugin": "^2.0"
    },
    "require-dev": {
        "composer/composer": "^1.0 || ^2.0"
    },
    "extra": {
        "class": "Fidry\\Composer\\InheritancePlugin\\InheritancePlugin"
    },
    "config": {
        "sort-packages": true
    }
}
